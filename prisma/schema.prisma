generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  firstName String
  lastName  String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  companies Company[]
  orders    Order[]
  
  @@map("users")
}

model Company {
  id                String      @id @default(cuid())
  name              String
  type              CompanyType @default(SARL)
  capital           Int         // Capital social en euros
  address           String
  postalCode        String
  city              String
  purpose           String      // Objet social
  duration          Int         @default(99) // Durée en années
  fiscalYear        String      @default("31/12") // Exercice social
  
  // Direction (adaptatif selon le type)
  manager           String?     // Gérant (SARL, EURL)
  president         String?     // Président (SAS, SASU)
  director          String?     // Directeur général (SAS)
  
  // Associés/Actionnaires
  shareholders      Json        // Structure adaptée selon le type
  
  // Spécifique SCI
  civilPurpose      String?     // Objet civil pour SCI
  
  // Spécifique SAS/SASU
  boardMembers      Json?       // Conseil d'administration pour SAS
  
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  
  // Relations
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders    Order[]
  documents Document[]
  
  @@map("companies")
}

model Order {
  id            String      @id @default(cuid())
  amount        Int         // Montant en centimes
  currency      String      @default("eur")
  status        OrderStatus @default(PENDING)
  stripeId      String?     @unique // Stripe Payment Intent ID
  paidAt        DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Relations
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId String
  company   Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  documents Document[]
  
  @@map("orders")
}

model Document {
  id          String       @id @default(cuid())
  type        DocumentType
  filename    String
  path        String       // Chemin vers le fichier PDF
  generatedAt DateTime     @default(now())
  
  // Relations
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  @@map("documents")
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  COMPLETED
  FAILED
}

enum CompanyType {
  SARL    // Société à Responsabilité Limitée
  SAS     // Société par Actions Simplifiée
  SASU    // Société par Actions Simplifiée Unipersonnelle
  EURL    // Entreprise Unipersonnelle à Responsabilité Limitée
  SCI     // Société Civile Immobilière
}

enum DocumentType {
  STATUTES        // Statuts
  LEGAL_NOTICE    // Annonce légale
  DECLARATION     // Déclaration
}